FROM ghcr.io/terchris/docuwrite-base:latest

# Install development tools (TypeScript and development dependencies)
RUN npm install -g typescript @types/node ts-node nodemon \
    && npm install -g eslint prettier @typescript-eslint/parser @typescript-eslint/eslint-plugin

# Install shellcheck for bash script development
RUN apt-get update && apt-get install -y shellcheck \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace