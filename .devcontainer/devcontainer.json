{
    "name": "DevContainer Toolbox",
    "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11"
        },
        "ghcr.io/devcontainers/features/common-utils:2": {
            "upgradePackages": true
        },
        "ghcr.io/devcontainers/features/azure-cli:1": {},
        "ghcr.io/devcontainers/features/powershell:1": {}
    },
    "runArgs": [
        "--cap-add=NET_ADMIN",
        "--device=/dev/net/tun:/dev/net/tun",
        "--cap-add=NET_RAW",
        "--privileged"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.azure-account",
                "ms-vscode.azurecli",
                "ms-vscode.powershell",
                "yzhang.markdown-all-in-one",
                "bierner.markdown-mermaid",
                "redhat.vscode-yaml",
                "donjayamanne.githistory"
            ]
        }
    },
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "remoteUser": "vscode",
    "containerUser": "vscode",
    "remoteEnv": {
        "DOCKER_HOST": "/var/run/docker.sock",
        "DOCKER_HOST_URI": "/var/run/docker.sock",
        "PODMAN_SOCKET": "/var/run/docker.sock"
    },
    "mounts": [
        "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind,consistency=cached"
    ],
    "shutdownAction": "stopContainer",
    "updateRemoteUserUID": true,
    "init": true,
    "postCreateCommand": "if [ -f .devcontainer.extend/project-installs.sh ]; then bash .devcontainer.extend/project-installs.sh; fi",
    "initializeCommand": [
        "bash",
        "-c",
        "chmod +x ${localWorkspaceFolder}/.devcontainer/setup/update-vscode-podman.sh && cd ${localWorkspaceFolder} && ${localWorkspaceFolder}/.devcontainer/setup/update-vscode-podman.sh && source ${localWorkspaceFolder}/.podman_env"
    ]
}
