{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["ES2020"],
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "sourceMap": true
    },
    "include": [
      "src/cli/typescript/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "tests"
    ]
  }